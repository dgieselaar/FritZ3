<?xml version="1.0" encoding="utf-8" ?>
<data>
	
	<rule where="ApplicationDocument">
		<property name="background.backgroundColor">0xEFEFEF</property>
		<property name="layout.align">center</property>
		<property name="layout.pack">center</property>
		<property name="layout.direction">normal</property>
		<property name="layout.orient">horizontal</property>
		<property name="padding">20px</property>
	</rule>
	
	<rule where="TextButton">
		<property name="width">auto</property>
		<property name="height">auto</property>
		<property name="background.roundedCorners">5px</property>
		<property name="background.border">1px 0x00B4FF solid inside</property>
		<property name="background.backgroundGradient">linear 90 (0x00B4FF, 0x007EB3)</property>
		<property name="embedFonts">false</property>
		<property name="css">
			p {
			font-family: Helvetica;
			font-size: 11;
			font-weight: bold;
			}</property>
		<property name="padding">5px 5px 5px 5px</property>
		<property name="text"><![CDATA[<b>Click me!</b>]]></property>
		<property name="color">0xDDF4FF</property>
	</rule>
	
	<rule where="TextButton:!init">
		<transition name="background.backgroundGradient" duration="0.25"/>
		<transition name="background.border" duration="0.25"/>
		<transition name="padding" duration="0.25"/>
	</rule>
	
	<rule where="TextButton:highlighted">
		<property name="background.backgroundGradient">linear 0 (0xFF68EB, 0xFF0000, 0xFF68EB)</property>
		<property name="background.border">2px 0xFF0000 solid inside</property>
		<property name="padding">8px 5px 5px 5px</property>
		<property name="color">0xDDF4FF</property>
	</rule>
	
	
</data>