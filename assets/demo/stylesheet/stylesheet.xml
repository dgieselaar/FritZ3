<?xml version="1.0" encoding="utf-8" ?>
<data>
	
	<rule where="ApplicationDocument">
		<property name="background.backgroundColor">0xEFEFEF</property>
		<property name="auto-height">false</property>
		<property name="auto-width">false</property>
		<property name="layout.align">center</property>
		<property name="layout.pack">center</property>
		<property name="layout.direction">normal</property>
		<property name="layout.padding">10</property>
	</rule>
	
	<rule where="GraphicsComponent">
		<property name="background.backgroundColor">0xFF00FF</property>
		<property name="background.roundedCorners">10</property>
		<property name="background.background-image">url("http://a3.twimg.com/profile_images/1181990527/ProfilePhoto_normal.png")</property>
		<property name="background.background-position">left center</property>
		<property name="width">250</property>
		<property name="height">200</property>
	</rule>

</data>