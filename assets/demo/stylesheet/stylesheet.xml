<?xml version="1.0" encoding="utf-8" ?>
<data>
	
	<rule where="ApplicationDocument">
		<property name="background.backgroundColor">0xEFEFEF</property>
		<property name="auto-height">false</property>
		<property name="auto-width">false</property>
		<property name="layout.align">stretch</property>
		<property name="layout.pack">justify</property>
		<property name="layout.direction">normal</property>
		<property name="layout.padding">10</property>
	</rule>
	
	<rule where="GraphicsComponent">
		<property name="background.backgroundColor">0xFF00FF</property>
		<property name="background.roundedCorners">10</property>
		<property name="box-flex">1</property>
	</rule>
	
	<rule where="GraphicsComponent:nth-last-child(2)">
		<property name="box-flex-group">2</property>
		<property name="minimum-width">40</property>
		<property name="background.background-color">0xBBBBBB</property>
	</rule>
	
	<rule where="GraphicsComponent:last-child">
		<property name="box-flex-group">2</property>
		<property name="minimum-width">40</property>
		<property name="background.background-color">0xBBBBBB</property>
		<property name="background.border-position">inside</property>
		<property name="background.border">1</property>
		<property name="background.border-color">#000000</property>
	</rule>

</data>