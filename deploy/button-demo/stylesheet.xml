<?xml version="1.0" encoding="utf-8" ?>
<data>
	
	<rule where="ApplicationDocument">
		<property name="background.backgroundColor">0xEFEFEF</property>
		<property name="auto-height">false</property>
		<property name="auto-width">false</property>
		<property name="layout.align">center</property>
		<property name="layout.pack">center</property>
		<property name="layout.direction">normal</property>
		<property name="layout.orient">horizontal</property>
		<property name="layout.padding">10</property>
	</rule>
	
	<rule where="TextButton">
		<property name="background.background-color">0xFFFFFF</property>
		<property name="background.background-gradient">linear 90 0x00B4FF, 0x0098d9</property>
		<property name="background.border">1</property>
		<property name="background.border-position">1</property>
		<property name="background.border-gradient">linear 90 0x008fcc, 0x006b99</property>
		<property name="background.rounded-corners">3</property>
		<property name="color">0xFFFFFF</property>
		<property name="textField.filters">
			<Array>
				<DropShadowFilter distance="1" alpha="0.5" blurX="0" blurY="0" strength="5" quality="3" color="0x004766" />
			</Array>
		</property>
		<property name="auto-width">true</property>
		<property name="auto-height">true</property>
		<property name="word-wrap">false</property>
		<property name="layout.vertical-align">center</property>
		<property name="embed-fonts">false</property>
		<property name="font-family">Helvetica</property>
		<property name="padding">2</property>
		<property name="padding-left">4</property>
		<property name="padding-right">4</property>
		<property name="text"><![CDATA[<b>Click me!</b>]]></property>
	</rule>
	
	<rule where="TextButton:highlighted">
		<property name="background.background-gradient">linear 90 0x00B4FF, 0x00aaf2</property>
	</rule>
	
	<rule where="TextButton:pressed">
		<property name="background.background-gradient">linear 90 0x00aaf2, 0x00B4FF</property>
		<property name="text"><![CDATA[<b>That's it!</b>]]></property>
	</rule>
	
	<rule where="TextButton:first-child:!pressed">
		<property name="auto-height">true</property>
	</rule>
	
	<rule where="TextButton:first-child:pressed">
		<property name="auto-height">false</property>
		<property name="height">40</property>
	</rule>
	
	<rule where="TextButton:!first-child">
		<property name="margin-left">5</property>
	</rule>
	
	<rule where="TextButton:nth-child(2)">
		<property name="disabled">true</property>
		<property name="alpha">0.5</property>
		<property name="text"><![CDATA[<b>Please ignore me!</b>]]></property>
	</rule>
	
	<rule where="TextButton:nth-child(3)">
		<property name="background.background-gradient">linear 90 0xff0000, 0xd90000</property>
		<property name="background.border-gradient">linear 90 0xcc0000, 0x990000</property>
	</rule>
	
	<rule where="TextButton:nth-child(3):highlighted">
		<property name="background.background-gradient">linear 90 0xff0000, 0xf20000</property>
	</rule>
	
	<rule where="TextButton:nth-child(3):pressed">
		<property name="background.background-gradient">linear 90 0xd90000, 0xf20000</property>
	</rule>
	
	<rule where="TextButton:nth-child(4)">
		<property name="filters">null</property>
	</rule>
	
	<rule where="TextButton:nth-child(4):pressed">
		<property name="filters">
			<Array>
				<GlowFilter alpha="0.5" blurX="4" blurY="4" strength="5" quality="3" color="0x00B4FF" />
			</Array>
		</property>
	</rule>
	
	<rule where="TextButton:nth-child(5)">
		<property name="text"><![CDATA[<b>You can't ignore<br/> a multiline button!<br/><br/>Or can you?</b>]]></property>
		<property name="text-align">center</property>
	</rule>
	
	<rule where="TextButton:last-child">
		<property name="background.background-image">url("http://www.gentlerainmarketing.com/images/icon_hand.gif")</property>
		<property name="background.background-position">left 5px center</property>
		<property name="padding-left">24</property>
	</rule>
	
	
</data>